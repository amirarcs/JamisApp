<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_cardview"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardMinHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/cardMinHeight"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="@dimen/mid_margin"
    android:elevation="5dp"
    android:foreground="?selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/card_ribbon"
            android:layout_width="@dimen/local_padding"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"

            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/card_pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:text="@string/patientFullName"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/card_ribbon"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="@dimen/tiny_Padding" />
        <TextView
            android:id="@+id/card_nationalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_pname"
            android:layout_toStartOf="@id/card_ribbon"
            android:layout_marginTop="@dimen/tiny_Margin"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            android:text="@string/nationalCode"
            android:padding="@dimen/tiny_Padding"/>
        <TextView
            android:id="@+id/card_refDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_nationalcode"
            android:layout_toStartOf="@id/card_ribbon"
            android:layout_marginTop="@dimen/tiny_Margin"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            android:text="@string/patientRefDate"
            android:padding="@dimen/tiny_Padding"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>