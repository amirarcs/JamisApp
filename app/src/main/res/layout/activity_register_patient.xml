<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/green_round_button"
            android:textColor="@color/white"
            android:id="@+id/btn_p_info"
            android:layout_margin="2dp"
            android:text="@string/patientInfo"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/green_round_button"
            android:textColor="@color/white"
            android:id="@+id/btn_p_face"
            android:layout_margin="2dp"
            android:text="@string/faceArgs"/>
        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/green_round_button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:id="@+id/btn_p_images"
            android:text="@string/faceImage"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="90">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/reg_personal_info"
                android:gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="32dip"
                    android:layout_marginRight="32dip"
                    android:layout_marginBottom="12dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/patientFullName"
                    android:id="@+id/reg_pname"
                    android:inputType="text"
                    android:background="@drawable/text_back"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="32dip"
                    android:layout_marginRight="32dip"
                    android:layout_marginBottom="12dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/nationalCode"
                    android:id="@+id/reg_ncode"
                    android:inputType="number"
                    android:background="@drawable/text_back"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="32dip"
                    android:layout_marginRight="32dip"
                    android:layout_marginBottom="12dip"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="phone"
                    android:id="@+id/reg_phone"
                    android:background="@drawable/text_back"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="32dip"
                    android:layout_marginRight="32dip"
                    android:layout_marginBottom="12dip"
                    android:layout_height="wrap_content"
                    android:hint="Reference Date"
                    android:id="@+id/reg_rdate"
                    android:background="@drawable/text_back"
                    android:inputType="date"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reg_btn_submit"
                    android:text="submit"
                     android:background="@drawable/round_button"
                    android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/reg_face_info"
                android:paddingTop="38dip">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Upper Incisal"
                            android:inputType="numberDecimal"
                            android:id="@+id/reg_upper_inc"
                            android:background="@drawable/text_back"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Lower Incisal"
                            android:inputType="numberDecimal"
                            android:id="@+id/reg_lower_inc"
                            android:background="@drawable/text_back"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Upper gingival"
                            android:id="@+id/reg_upper_ging"
                            android:inputType="numberDecimal"
                            android:background="@drawable/text_back"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Lower gingival"
                            android:id="@+id/reg_lower_ging"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/reg_chinmode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Ear X Angle"
                            android:id="@+id/reg_ear_x"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Ear Y Angle"
                            android:id="@+id/reg_ear_y"
                            android:background="@drawable/text_back"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Eye X Angle"
                            android:id="@+id/reg_eye_x"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Eye Y Angle"
                            android:id="@+id/reg_eye_y"
                            android:background="@drawable/text_back"/>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Eyebrow X Angle"
                            android:id="@+id/reg_eyebrow_x"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Eyebrow Y Angle"
                            android:id="@+id/reg_eyebrow_y"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Ramus Bone X Angle"
                            android:id="@+id/reg_ramus_x"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginLeft="32dip"
                            android:layout_marginRight="32dip"
                            android:layout_marginBottom="12dip"
                            android:layout_height="wrap_content"
                            android:hint="Ramus Bone Y Angle"
                            android:id="@+id/reg_ramus_y"
                            android:background="@drawable/text_back"
                            android:inputType="numberDecimal"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reg_btn_face_submit"
                            android:text="submit"
                            android:background="@drawable/round_button"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:gravity="center"
                android:id="@+id/reg_face_img">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_before"
                        android:layout_width="@dimen/thumb_width"
                        android:layout_height="@dimen/thumb_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_image"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/img_mask"
                        android:layout_width="@dimen/thumb_width"
                        android:layout_height="@dimen/thumb_height"
                        android:layout_weight="1"
                        android:src="@drawable/ic_image"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/img_after"
                        android:layout_width="@dimen/thumb_width"
                        android:layout_height="@dimen/thumb_height"
                        android:layout_weight="1"
                        android:src="@drawable/ic_image"
                        android:scaleType="fitXY"/>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>




</LinearLayout>