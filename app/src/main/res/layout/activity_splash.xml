<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activiy.SplashActivity">
    <ImageView
        android:id="@+id/splash_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_iconfinder_tooth_3522348"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/splash_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/company_brand"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@id/splash_imageView"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Jamiâ€™s laughter App"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/big_title"
        android:layout_alignParentTop="true"/>

</RelativeLayout>